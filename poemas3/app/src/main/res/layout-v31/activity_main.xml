<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/system_accent1_100"
    tools:context=".MainActivity">

   <ImageView
       android:id="@+id/imagenPortada"
       android:layout_width="300sp"
       android:layout_height="250sp"
       android:src="@drawable/bandera"
       android:layout_centerHorizontal="true"
       />
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="250sp"
       android:text="Poemas de Guatemala"
       android:textStyle="bold"
       android:textSize="25dp"
       android:textAlignment="center"
       android:textColor="@color/material_dynamic_primary20"
       android:freezesText="true"
      />

      <Button
          android:layout_width="300sp"
          android:layout_height="80sp"
          android:layout_marginTop="350sp"
          android:layout_centerHorizontal="true"
          android:background="@android:color/holo_green_light"
          android:text="Poemas Patrios"/>











</RelativeLayout>